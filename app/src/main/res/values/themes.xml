<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Style_transfer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darktheme</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryVariant</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Style_transfer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="Theme.Style_transfer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Style_transfer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>